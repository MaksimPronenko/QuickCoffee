<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBrownBorderlessHeight48" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@color/brown_background</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:strokeWidth">0</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/beige_text</item>
    </style>

    <style name="BookingInputLayoutCoffee" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/brown_light_text</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
    </style>

</resources>